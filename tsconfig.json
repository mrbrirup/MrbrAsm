{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES2017",
    "lib": [
      "ES6"
    ],
    "sourceMap": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "rootDir":"./src",
    "strictFunctionTypes": true,    
    "importsNotUsedAsValues": "preserve",
    "noImplicitAny": false
  },
  "include": [ "./src/**/*" ],
  "exclude": [
    "node_modules"
  ]
}