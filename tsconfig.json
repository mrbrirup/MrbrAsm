{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES2017",
    "lib": [
      "ES2019"
    ],
    "sourceMap": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "rootDir": "./src",
    "strictFunctionTypes": true,
    "importsNotUsedAsValues": "preserve",
    "noImplicitAny": false
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}